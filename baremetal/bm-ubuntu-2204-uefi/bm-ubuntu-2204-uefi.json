{
    "builders": [{
        "type": "qemu",
        "accelerator": "kvm",
        "qemuargs": [
        ["-m", "2048M"],
        ["-smp", "cpus=1,maxcpus=16,cores=4"],
	      ["-cpu", "host"],
	      ["-machine", "accel=kvm"]
        ],
        "disk_interface": "virtio",
        "disk_compression": false,
        "disk_size": 30720,
        "efi_boot"          : true,

        
        "format": "qcow2",
        "net_device": "virtio-net",

				"iso_url": "https://cdimage.ubuntu.com/ubuntu-server/jammy/daily-live/current/jammy-live-server-amd64.iso",
        "iso_checksum": "c897f3dc56893d47371a9cca8d9b60d080e94ee208929159d9fb0b4eaf90c842",

        "vm_name": "baremetal-ubuntu-2204",
        "output_directory": "./_output/baremetal-ubuntu-2204-uefi",
        "headless": true,
        "vnc_bind_address": "0.0.0.0",
        "http_directory": "./baremetal/http",
        "ssh_username": "vmadmin",
        "ssh_password": "MyP@ssw0rd-22!",
        "ssh_timeout": "30m",
        "ssh_pty": true,
				"ssh_handshake_attempts": "20",

        "boot_wait": "5s",
        "boot_command": [
          "c<wait>",
          "linux /casper/vmlinuz --- autoinstall ds=\"nocloud-net;seedfrom=http://{{.HTTPIP}}:{{.HTTPPort}}/\"",
          "<enter><wait>",
          "initrd /casper/initrd",
          "<enter><wait>",
          "boot",
          "<enter>"
        ],
        "shutdown_command": "echo 'vmadmin' | sudo -S systemctl poweroff"
    }],
    "provisioners": [{
        "type": "shell",
        "execute_command": "echo 'vmadmin' | {{.Vars}} sudo -S -E sh -eux '{{.Path}}'",
        "scripts": [
            "scripts/ubuntu/network-config.sh",
            "scripts/ubuntu/dracut-config.sh",
            "scripts/ubuntu/grub-config-gpu.sh",
            "scripts/ubuntu/install-nvidia-drivers-2204.sh",
            "scripts/ubuntu/install-mxln-2204.sh",
            "scripts/ubuntu/clean-sshkeys.sh",
            "scripts/ubuntu/cleanup.sh",
            "scripts/common/sync.sh"
        ]
    }]
}

